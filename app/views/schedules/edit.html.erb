<h2>スケジュール編集</h2>


    
  <%= form_with model: @schedule do |f| %>

      <table>
        <tr>
          <th><%= f.label :title ,"タイトル" %></th>
          <td><%= f.text_field :title %></td>
        </tr>
 
        <tr>
          <th><%= f.label :start_at,"開始日" %></th>
          <td><%= f.date_field :start_at %></td>
        </tr>
 
        <tr>
          <th><%= f.label :end_at,"終了日" %></th>
          <td><%= f.date_field :end_at %></td>
        </tr>
 
        <tr>
          <th><%= f.label :all_day,"終日" %></th>
          <td><%= f.check_box :'all_day' %></td>
        </tr>
        
        <tr>
          <th><%= f.label :memo,"スケジュールメモ" %></th>
          <td>
            <textarea class="posts-content" name="post[memo]" id="post_memo"></textarea>
            
          </td>
        </tr>
      </table>
 
      <div>
        <ul>
            <li><%= f.submit "スケジュールの編集を完了する" %></li>
            <li><%= link_to("スケジュール一覧に戻る", "/schedules/index") %></li>
        </ul>
    </div>
</form>
  </div>
  <% end %>
  
  